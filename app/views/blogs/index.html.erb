<div class="index_page">
<h1>Blog</h1>	
<P><%= link_to "新規投稿", new_blog_path , :class=>"btn" %></P>
<% @blogs.each do |blog| %>
  <div class="index_item">
  <h1><%= blog.title %></h1>
  <p><%= render 'blogs/tag_list', tag_list: blog.category_list %></p>
  <article><%= blog.content %></article>
  <div class="btn_class">
  <%= link_to "編集",edit_blog_path(blog.id) , :class=>"btn"%>
  <%= link_to "削除",blog_path(blog.id),:method=>:delete , "data-confirm" => "本当に削除しますか？" , :class=>"btn"%>
  </div>
  </div>
<%end%>
<p><%= paginate @blogs %></p>
</div>